<form action="/admin" method="POST" style="margin-top: 1em">
  <div class="form-group">
    <input type="text" id="invite" name="invite" class="form-control" placeholder="Invite Code" value="<%= typeof firstname != 'undefined' ? firstname : '' %>" />
  </div>
  <div class="form-group">
    <input type="text" id="business" name="business" class="form-control" placeholder="Business Name" value="<%= typeof password != 'undefined' ? password : '' %>" />
  </div>
  <button type="submit" class="btn btn-info btn-block">Register</button>
</form>
<% include ./partials/messages %>
